<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">
	<display-name>MySite</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>SignupPage</servlet-name>
		<servlet-class>com.mysite.SignupPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>SignupPage</servlet-name>
		<url-pattern>/Signup</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LoginPage</servlet-name>
		<servlet-class>com.mysite.LoginPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>LoginPage</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ResetPage</servlet-name>
		<servlet-class>com.mysite.ResetPage</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>ResetPage</servlet-name>
		<url-pattern>/Reset</url-pattern>
	</servlet-mapping>
</web-app>

